{
  "manifest_version": 3,
  "name": "매시각 X분 알람 (알림만)",
  "version": "1.1",
  "description": "매시각 X분마다 브라우저 알림을 띄웁니다. (소리 없음, 시간/요일 설정 가능)",
  "permissions": ["alarms", "notifications", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "알람 설정"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}